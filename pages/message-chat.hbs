

<div class="row">
  <div class="medium-10 columns content-focus">

    <h4 class="message-header">Conversation with <a href="/people/{{sender.url_title}}">{{sender.screenname}}</a></h4>

		<ul class="message-stream">

      {{#each messages_list}}
			<!-- w t f ? -->
			<li class="{{#is user_id_recipient "==" ../user_id}}sender{{else}}recipient{{/is}}">
				<span class="avatar">
          <a href="/people/{{../sender.url_title}}"><img class="avatar-sender" src="{{../sender.avatar.small}}" />{{../sender.screenname}}</a>
          <a href="/people/{{../recipient.url_title}}"><img class="avatar-recipient" src="{{../recipient.avatar.small}}" />{{../recipient.screenname}}</a>
        </span>
				<span class="data">
					<span class="message">{{{nl2br body}}}</span>
					<span class="date">{{format_timestamp date_sent}}</span>
				</span>
			</li>
      {{/each}}

		</ul>



    <div class="message-response">
      <textarea id="message_content" name="message" class="reply"></textarea>
<!-- fixit send to profile if it's from a profile -->
      <button id="message-reply" data-recipient-user="{{sender._id}}">Reply</button>
    </div>






  </div>
  <div class="medium-2 columns sidebar">
    {{> sidebar}}

  </div>
</div>

