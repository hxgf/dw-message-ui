


<div class="row">
  <div class="medium-10 columns content-focus">

    <h4 class="message-header">Conversation with {{sender.screenname}} {{#if ranch.title}}<a href="/ranch/{{ranch.url_title}}">({{ranch.title}})</a>{{/if}}</h4>

		<ul class="message-stream">

      {{#each messages_list}}

			<li class="{{#is user_id_recipient "==" ../global.auth_token}}sender{{else}}recipient{{/is}}">
				<span class="avatar">
          <img class="avatar-sender" src="{{../sender.avatar.small}}" />
          <img class="avatar-recipient" src="{{../recipient.avatar.small}}" />
        </span>
				<span class="data">
					<span class="message">{{body}}</span>
					<span class="date">{{format_timestamp date_sent}}</span>
				</span>
			</li>
      {{/each}}

		</ul>



    <div class="message-response">
      <textarea name="message" class="reply"></textarea>
      <button id="message-reply" data-recipient="{{sender._id}}">Reply</button>
    </div>






  </div>
  <div class="medium-2 columns sidebar">
    {{> ads}}

  </div>
</div>
